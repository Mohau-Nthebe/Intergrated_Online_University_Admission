<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    tools:context="com.example.intergratedapplicationhub.activities.ApplicationListDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:text="Loading...please wait..."
            android:textColor="@color/primary_dark"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_form"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="373dp"
                android:layout_height="160dp"
                app:srcCompat="@drawable/logo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STUDENT INFORMATION"
                android:textColor="#001C57"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERSONAL INFORMATION"
                android:background="@drawable/bigbutton"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvPersonalDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:textColor="#001C57"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESIDENTIAL ADDRESS"
                android:background="@drawable/bigbutton"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvResidentialAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:textColor="#001C57"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GRADE 11 JUNE RESULTS"
                android:background="@drawable/bigbutton"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/tvResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:textColor="#001C57"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COURSES APPLIED FOR"
                android:background="@drawable/bigbutton"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/tvCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:textColor="#001C57"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="APPLICATION STATUS"
                android:background="@drawable/bigbutton"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/tvApplicationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:textColor="#001C57"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:id="@+id/lvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#001C57"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:textSize="18dp"/>

                    <Spinner
                        android:id="@+id/spinnerFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/primary_light"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#001C57"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:textSize="18dp"/>

                    <Spinner
                        android:id="@+id/spinnerSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/primary_light"/>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnNewStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button"
                android:visibility="gone"
                android:text="UPDATE STATUS"
                android:textColor="#03002e" />



        </LinearLayout>



    </LinearLayout>



</ScrollView>
